@model DataLayer.Model.accmast


@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="https://cdn.datatables.net/1.10.25/css/jquery.dataTables.min.css" rel="stylesheet" />


<div class="row mb-2" style="padding-left: 8px;">
    <h3>Account Master</h3>
</div>
<form asp-controller="AccountMaster" asp-action="SearchResult" method="post">

    <div class="form-row">
        <div class="form-group  col-md-3">
            <label for="accountNumber">Account Number:</label>
            <input type="text" asp-for="accno" class="form-control" id="accountNumber" placeholder="Enter Account Number" />
        </div>
        <div class="form-group col-md-3">
            <label for="openStartDate">Account Open Start Date:</label>
            <input type="date" asp-for="open_date" class="form-control" id="openStartDate" placeholder="Select Start Date" />
        </div>
        <div class="form-group col-md-3">
            <label for="openEndDate">Account Open End Date:</label>
            <input type="date" asp-for="close_date" class="form-control" id="openEndDate" placeholder="Select End Date" />
        </div>
        <div class="form-group col-md-3">
            <label for="oldAccountNumber">Old Account Number:</label>
            <input type="text" asp-for="oldacno" class="form-control" id="oldAccountNumber" placeholder="Enter Old Account Number" />
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-3">
            <label for="accountName">Account Name / Title:</label>
            <input type="text" asp-for="name" class="form-control" id="accountName" placeholder="Enter Account Name or Title" />
        </div>
        <div class="form-group col-md-3">
            <label for="closedStartDate">Account Closed Start Date:</label>
            <input type="date" asp-for="sanc_date" class="form-control" id="closedStartDate" placeholder="Select Start Date" />
        </div>
        <div class="form-group col-md-3">
            <label for="closedEndDate">Account Closed End Date:</label>
            <input type="date" asp-for="eff_date" class="form-control" id="closedEndDate" placeholder="Select End Date" />
        </div>
        <div class="form-group col-md-3">
            <label for="status">Status:</label>
            <select class="form-control" asp-for="status" id="status">
                <option value="">-- Select Status --</option>
                <option value="active">Active</option>
                <option value="inactive">Inactive</option>
                <!-- Add more options as needed -->
            </select>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
    <button type="reset" class="btn btn-secondary">Reset</button>
</form>

